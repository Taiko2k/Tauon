# Maintainer: Your Name <youremail@domain.com>
pkgname=libprojectm-git
pkgver=r2739.b3e7e8cdb
pkgrel=1
pkgdesc="Cross-platform music visualization library (Milkdrop-compatible) - git version"
arch=('x86_64' 'aarch64')
url="https://github.com/projectM-visualizer/projectm"
license=('LGPL-2.1-only')
depends=('glm' 'mesa' 'gcc-libs' 'glibc')
makedepends=('git' 'cmake' 'ninja')
provides=('libprojectm' 'projectm')
conflicts=('libprojectm' 'projectm')
source=("git+https://github.com/projectM-visualizer/projectm.git")
sha256sums=('SKIP')

prepare() {
  cd projectm
  git submodule update --init --recursive
}

pkgver() {
  cd projectm
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cmake -B build -S projectm -G Ninja \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DENABLE_TESTING=OFF \
    -DENABLE_EMSCRIPTEN=OFF \
    -Wno-dev
  
  cmake --build build
}

check() {
  cd build
  # Run tests if available
  ctest --output-on-failure || true
}

package() {
  DESTDIR="$pkgdir" cmake --install build
  
  # Install license
  install -Dm644 projectm/LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

